<Window x:Class="ResetAPI.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.codeplex.com"
        Title="RESET API - Steam Skin Analyzer"
        Width="1400"
        Height="800"
        Background="#F5F5F5"
        Foreground="#333333"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Resources/app.ico">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Styles/CommonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="400" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,0,0,1" 
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="RESET API" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#2196F3" />

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Spacing="15">
                    <RadioButton GroupName="Game" Content="CS2" Tag="730" 
                                 IsChecked="True" 
                                 Command="{Binding ChangeModeCommand}" 
                                 CommandParameter="730" />
                    <RadioButton GroupName="Game" Content="Dota 2" Tag="570" 
                                 Command="{Binding ChangeModeCommand}" 
                                 CommandParameter="570" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Search Bar -->
            <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" 
                             Padding="10,8" 
                             FontSize="14" 
                             Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" 
                             Foreground="#333" 
                             PlaceholderText="Search skins..." />

                    <Button Grid.Column="1" 
                            Content="Load Popular" 
                            Padding="15,8" 
                            Margin="10,0,0,0" 
                            Background="#2196F3" 
                            Foreground="White" 
                            Command="{Binding LoadSkinsCommand}" />
                </Grid>
            </Border>

            <!-- Skins List -->
            <ListBox Grid.Row="1" 
                     ItemsSource="{Binding FilteredSkins}" 
                     SelectedItem="{Binding SelectedSkin}" 
                     Background="#FAFAFA" 
                     BorderThickness="0,1,1,0" 
                     BorderBrush="#E0E0E0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="10" Margin="0,1,0,0" Background="White" 
                                BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="100" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding MarketHashName}" FontWeight="SemiBold" Foreground="#333" />
                                    <TextBlock Text="{Binding Volume, StringFormat='Volume: {0}'}" FontSize="12" Foreground="#999" Margin="0,3,0,0" />
                                </StackPanel>
                                <TextBlock Grid.Column="1" Text="{Binding LowestPrice, StringFormat='{}{0:C}'}" 
                                           FontSize="16" FontWeight="Bold" Foreground="#4CAF50" 
                                           TextAlignment="Right" VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!-- Chart Panel -->
        <Border Grid.Row="1" Grid.Column="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="1,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Selected Skin Info -->
                <Border Grid.Row="0" Background="#F5F5F5" Padding="15" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                    <StackPanel>
                        <TextBlock Text="Selected Skin" FontSize="12" Foreground="#999" FontWeight="Bold" Margin="0,0,0,5" />
                        <TextBlock Text="{Binding SelectedSkin.MarketHashName}" 
                                   FontSize="14" FontWeight="SemiBold" TextWrapping="Wrap" />
                        <TextBlock Text="{Binding SelectedSkin.LowestPrice, StringFormat='Price: {0:C}'}" 
                                   FontSize="16" FontWeight="Bold" Foreground="#2196F3" Margin="0,8,0,0" />
                    </StackPanel>
                </Border>

                <!-- Price Chart -->
                <oxy:PlotView Grid.Row="1" Model="{Binding PriceChart}" Margin="10" />
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" Grid.ColumnSpan="2" 
                Background="#F5F5F5" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0" 
                Padding="15,10">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}" Foreground="#666" FontSize="12" />
                <ProgressBar IsIndeterminate="True" Height="2" VerticalAlignment="Top" 
                             Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}" />
            </Grid>
        </Border>
    </Grid>
</Window>